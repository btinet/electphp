<!doctype html>
<html lang="de">
<head>
    <title>Wahlcodes f√ºr {{ election }}</title>
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <div class="row row-cols-1 g-3">
        {% for code in election.codes %}
            {% if not code.used %}
                <div class="col py-5 border-bottom">
                    <div class="d-flex align-items-start justify-content-start">
                        <div class="mt-3">
                            <b>{{ election }}</b>
                            <p>Sie haben {{ election.voices }} Wahlstimmen.</p>
                            Wahlcode: <b>{{ code }}</b>
                            <p class="mt-3">
                                {{ path('election_show',{'uuid':election.uuid}) }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

</body>
</html>





