{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
<div class="container pb-5">
    <div class="card  rounded-3">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="fw-bold">Kandidat:innen</div>
                <div class="d-flex">
                    <a class="btn btn-primary" href="{{ path('admin_person_new') }}">Kandidat:in anlegen</a>
                </div>
            </div>
        </div>
        <div class="table-responsive bg-light-subtle py-2">
            <table class="table table-hover mb-0" id="table">
                <thead class="border-primary border-3 border-top-0 border-start-0 border-end-0">
                <tr>
                    <th class="text-nowrap">Name</th>
                    <th class="text-nowrap">Wahlrunde</th>
                    <th class="text-end text-nowrap">Aktionen</th>
                </tr>
                </thead>
                <tbody>
                {% for person in people|sort((a, b) => a.name <=> b.name) %}
                    <tr>
                        <td class="text-nowrap">{{ person.name }}</td>
                        <td class="text-nowrap"><a href="{{ path('crud_election_show',{'id':person.election.id}) }}">{{ person.election.label }}</a></td>
                        <td class="text-end text-nowrap">
                            <a href="{{ path('admin_person_edit', {'id': person.id}) }}">bearbeiten</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <div class="text-muted small">
                Ãœbersicht aller Kandidat:innen.
            </div>
        </div>
    </div>
</div>


{% endblock %}
